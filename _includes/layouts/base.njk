<body class="d-flex flex-column min-vh-100">
  <header>
    <nav class="p-3 fixed-top bg-light">
      <div class="container-fluid d-flex">
        <a class="navbar-brand mt-2 me-4" href="/index">
          <img src="/images/logotip-negre.png" alt="arqué" width="70">
        </a>
        <ul class="nav nav-underline ms-auto">
          <li class="nav-item">
            <a href="/studio" class="nav-link link-body-emphasis px-2 {% if page.url == '/studio/' %}active{% endif %}" aria-current="page">Estudi</a>
          </li>
          <li class="nav-item">
            <a href="/projects" class="nav-link link-body-emphasis px-2 {% if page.url == '/projects/' %}active{% endif %}">Projectes</a>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <main role="main" class="flex-grow-1">
    {{ content | safe }}
  </main>

  <footer class="footer mt-auto p-3">
    <div class="container-fluid d-flex flex-wrap">
      <p>© Tots els drets reservats, 2025</p>
    </div>
  </footer>

  <!-- Bootstrap and other scripts -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" crossorigin="anonymous"></script>
  <script src="/js/fslightbox/fslightbox.js"></script>
